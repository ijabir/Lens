<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/plano_convex_lens"
    android:orientation="vertical"
    tools:context="com.example.ijabi.test1.Main23Activity">

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#0940f4"
        android:text="Where is your OBJECT?"
        android:gravity="center"
        android:textSize="40sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:orientation="vertical">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Greater than 2f"
            android:gravity="center"
            android:onClick="cf2pp"
            android:background="@null"
            android:textColor="#fcfcfc"
            android:textSize="30sp"
            android:id="@+id/b1"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equal to 2f"
            android:gravity="center"
            android:background="@null"
            android:textColor="#fcfcfc"
            android:onClick="cf2"
            android:textSize="30sp"
            android:id="@+id/b2"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Between f and 2f"
            android:gravity="center"
            android:onClick="cbf2f"
            android:background="@null"
            android:textColor="#fcfcfc"
            android:textSize="30sp"
            android:id="@+id/b3"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equal to f"
            android:background="@null"
            android:textColor="#fcfcfc"
            android:gravity="center"
            android:onClick="cf"
            android:textSize="30sp"
            android:id="@+id/b4"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Less than f"
            android:gravity="center"
            android:onClick="clf"
            android:background="@null"
            android:textColor="#fcfcfc"
            android:textSize="30sp"
            android:id="@+id/b5"/>
    </LinearLayout>

</LinearLayout>